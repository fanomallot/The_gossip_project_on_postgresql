<!DOCTYPE html>
<html>
<head>
	<title>UpdateGossip</title>
</head>
<body>
	<%= form_with(model: @gossip, local: true) do |form| %>
	<%= label_tag 'Title :' %> <br />
    <%= text_field_tag 'title',@gossip.title%><br /><br/>
    <%= label_tag 'content :' %> <br />
