<p>
    <%= form.submit %>
    <%end%>
    <!-- retour en arrière -->
	<%=link_to 'retour à la page précedante',gossip_path(@gossip.id)%></br>
	<%=link_to "retour à l'acceuil",gossips_path%>

</p>
</body>
</html>